page,
.page-view {
  height: 100%;
  position: relative;
  background: #fff;
}
.tabs {
  z-index: 9999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 2rpx solid #2C405A;
}
.tabs .tabs-item {
  background-color: #fff;
  color: #333333;
  font-size: 30rpx;
}
.tabs .tabs-item.active {
  background-color: #db6553;
  color: #fff;
}
.tabbar {
  z-index: 9999;
  position: fixed;
  top: 98rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  width: 100%;
  border-bottom: 2rpx solid #2C405A;
}
.tabbar .tab-item {
  color: #333333;
  padding: 30rpx 0;
}
.questions {
  padding: 0 40rpx 40rpx;
}
.questions .questions-item {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
.questions .questions-item .number {
  background: #db6553;
  color: #fff;
  border-radius: 8rpx;
}
.questions .questions-item .text {
  margin: 10rpx 0 30rpx;
}
.questions .questions-item .operate .btn {
  color: #2C405A;
  text-align: center;
  border-radius: 8rpx;
  background: #fff;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border: 2rpx solid #2C405A;
  display: block;
}
.questions .questions-item .operate .btn + .btn {
  margin-left: 118rpx;
}
.questions .questions-item .operate .btn.success {
  background: #39b54a;
  color: #fff;
  border: 2rpx solid #39b54a;
}
.questions .questions-item .operate .btn.error {
  background: #db6553;
  color: #fff;
  border: 2rpx solid #db6553;
}
.questions .questions-item .mark {
  width: 100%;
  padding: 10rpx;
  background: #DDDDDD;
  border-radius: 8rpx;
}
.questions .questions-item .mark text {
  line-height: 1.4rem;
}
.questions .questions-item .mark .input-number {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 10rpx;
  margin-left: 10rpx;
}
.questions .questions-item:not(:last-child) {
  border-bottom: 2rpx solid #aaaaaa;
}
.bottom-operate {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 9999;
}
.bottom-operate .defaultBtn {
  border-radius: 0;
}

