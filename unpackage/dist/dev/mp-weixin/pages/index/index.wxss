page,
.page-view {
  height: 100%;
  position: relative;
  background: #db6553;
}
.index {
  position: relative;
  height: 100%;
  line-height: 1.8;
  padding-top: 100rpx;
  box-sizing: border-box;
  background: #db6553;
}
.index .logo {
  position: fixed;
  height: 80rpx;
  width: 80rpx;
  border-radius: 100%;
}
.banner {
  position: absolute;
  top: 90;
  right: 0;
  width: 100%;
}
.index-con-bottom {
  position: absolute;
  top: 780rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  text-align: center;
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 600;
}
.index-con-bottom .icon {
  width: 100rpx;
  vertical-align: middle;
  margin-top: -6rpx;
  margin-right: 20rpx;
}
.index-con-bottom .title {
  font-weight: 600;
  font-size: 40rpx;
  background-image: -webkit-linear-gradient(bottom, #EFBAB2, #FEFCFC);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.index-con-bottom text {
  font-weight: 600;
}
.index-con-bottom .num {
  color: #E0DC5E;
  font-weight: bold;
  font-size: 40rpx;
}
.index-con-bottom .whiteBtn {
  margin-top: 30rpx;
  width: 500rpx;
  color: #db6553;
  text-align: center;
  border-radius: 45rpx;
  background: #FBEFED;
  line-height: 100rpx;
  font-weight: 600;
  font-size: 40rpx;
  display: block;
}
.cu-modal .modal-con {
  padding: 10rpx 40rpx 40rpx;
  text-align: left;
}
.cu-modal .modal-con .title {
  font-size: 30rpx;
}
.cu-modal .modal-con .row {
  margin: 20rpx 0;
}
.cu-modal .modal-con .row text {
  vertical-align: middle;
  line-height: 1.4rem;
  padding-right: 10rpx;
}
.cu-modal .modal-con .input-number {
  border: 2rpx solid #aaaaaa;
  width: 110rpx;
  border-radius: 8rpx;
  padding: 0 10rpx;
}
.cu-modal .modal-con .operate {
  margin: 40rpx 0;
}
.cu-modal .modal-con .operate .defaultBtn {
  margin-top: 30rpx;
  width: 400rpx;
  line-height: 80rpx;
}

