page,
.page-view {
  height: 100%;
  position: relative;
  background: #fff;
}
.title {
  padding: 40rpx;
  font-size: 40rpx;
}
.title .name {
  color: #db6553;
}
.result {
  border: 2rpx solid #aaaaaa;
  border-radius: 8rpx;
  margin: 20rpx 40rpx;
}
.result .result-item {
  padding: 20rpx 40rpx;
  border-right: 2rpx solid #aaaaaa;
}
.result .result-item .result-item-title {
  font-size: 30rpx;
}
.result .result-item .result-item-title .item {
  font-weight: bold;
}
.result .result-item .result-item-title .score {
  color: #db6553;
  margin-left: 20rpx;
  font-weight: bold;
}
.result .result-item .item-result {
  padding: 5rpx 0;
  font-size: 28rpx;
}
.result .result-item .item-result .score {
  margin-left: 20rpx;
}
.rank {
  margin: 30rpx 40rpx;
  text-align: center;
}
.rank .rank-item {
  font-size: 30rpx;
  font-weight: bold;
}
.operate {
  margin: 40rpx 0;
}
.operate .defaultBtn {
  margin-top: 30rpx;
  width: 400rpx;
  line-height: 80rpx;
}
.scan {
  margin: 20rpx 40rpx;
}
.scan .code {
  width: 280rpx;
  display: block;
}
.scan .des {
  margin-left: 20rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.scan .des .tip {
  margin-bottom: 10rpx;
}

